# MODES #
:: default
:: modal  @
:: swap   @
:: warp   @
:: stack  @
:: resize @
:: float  @
default                                 < ctrl - f ; modal
modal, swap, warp, stack, resize, float < ctrl - c ; default
modal, swap, warp, stack, resize, float < escape   ; default

# OPEN TERMINAL #
modal < ctrl - t         : alacritty msg create-window ; skhd -k "escape"
modal < ctrl + shift - t : alacritty msg create-window ; yabai -m window --toggle float --grid 4 : 4 : 1 : 1 : 2 : 2 ; skhd -k "escape"
modal < cmd - t : alacritty msg create-window ; yabai -m window --toggle float --grid 6:6:1:1:4:4 ; skhd -k "escape"

# WINDOWS #
  ## FOCUS ##
  modal < h : yabai -m window --focus west                      ; skhd -k "escape"
  modal < j : yabai -m window --focus south                     ; skhd -k "escape"
  modal < k : yabai -m window --focus north                     ; skhd -k "escape"
  modal < l : yabai -m window --focus east                      ; skhd -k "escape"

  modal < n : yabai -m window --focus stack.next || yabai -m window --focus stack.first ; skhd -k "escape"
  modal < p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last  ; skhd -k "escape"

  modal < z : yabai -m window --toggle zoom-fullscreen          ; skhd -k "escape"
  modal < f : yabai -m window --toggle float --grid 6:6:1:1:4:4 ; skhd -k "escape"
  modal < o : yabai -m window --toggle split                    ; skhd -k "escape"

  modal < cmd - f        : yabai -m window --toggle native-fullscreen ; skhd -k "escape"
  modal < cmd + ctrl - f : yabai -m window --toggle native-fullscreen ; skhd -k "escape"

  modal < cmd - w        : yabai -m window --close                    ; skhd -k "escape"

  ## SWAP ##
  modal < s ; swap
  swap < h : yabai -m window --swap west  ; skhd -k "escape"
  swap < j : yabai -m window --swap south ; skhd -k "escape"
  swap < k : yabai -m window --swap north ; skhd -k "escape"
  swap < l : yabai -m window --swap east  ; skhd -k "escape"

  ## WARP (MOVE) ##
  modal < w ; warp
  warp < h      : yabai -m window --warp west  ; skhd -k "escape"
  warp < j      : yabai -m window --warp south ; skhd -k "escape"
  warp < k      : yabai -m window --warp north ; skhd -k "escape"
  warp < l      : yabai -m window --warp east  ; skhd -k "escape"
  warp < return : yabai -m window --warp sibling ; skhd -k "escape"

  ## STACK ##
  modal < t ; stack
  stack < h : yabai -m window --stack west  ; skhd -k "escape"
  stack < j : yabai -m window --stack south ; skhd -k "escape"
  stack < k : yabai -m window --stack north ; skhd -k "escape"
  stack < l : yabai -m window --stack east  ; skhd -k "escape"

  ## RESIZE ##
  # modal < r ; resize
  # resize < shift - h : yabai -m window --resize left:-20:0
  # resize < shift - j : yabai -m window --resize bottom:0:20
  # resize < shift - k : yabai -m window --resize top:0:-20
  # resize < shift - l : yabai -m window --resize right:20:0

# SPACES #
  ## ARRANGEMENT ##
  modal < x     : yabai -m space --mirror y-axis ; skhd -k "escape"
  modal < y     : yabai -m space --mirror x-axis ; skhd -k "escape"
  modal < space : yabai -m space --balance       ; skhd -k "escape"
  # modal < ctrl - r : yabai -m space --rotate 90  ; skhd -k "escape"
  # modal < ctrl - o : yabai -m space --rotate 270 ; skhd -k "escape"

  ## FOCUS ##
  modal < cmd - 1 : yabai -m space --focus 1       ; skhd -k "escape"
  modal < cmd - 2 : yabai -m space --focus 2       ; skhd -k "escape"
  modal < cmd - 3 : yabai -m space --focus 3       ; skhd -k "escape"
  modal < cmd - n : yabai -m space --focus next    ; skhd -k "escape"
  modal < cmd - p : yabai -m space --focus prev    ; skhd -k "escape"

# MONITORS #
modal < cmd + ctrl - n : yabai -m display --focus next ; skhd -k "escape"
modal < cmd + ctrl - p : yabai -m display --focus prev ; skhd -k "escape"
modal < cmd + ctrl - 1 : yabai -m display --focus 1    ; skhd -k "escape"
modal < cmd + ctrl - 2 : yabai -m display --focus 2    ; skhd -k "escape"
modal < cmd + ctrl - 3 : yabai -m display --focus 3    ; skhd -k "escape"








# # GRID MODE ????????????????????????????????????
  # # Grid mode bindings are to resize and place float windows on your desktop
  # # in well known positions. The standard non-modified keys are used to resize
  # # the window to the top-half, bottom-half, right-half, left-half, and center of
  # # screen respectively.
  # float < k      : yabai -m window --grid 2:1:0:0:1:1
  # float < j      : yabai -m window --grid 2:1:0:1:1:1
  # float < l      : yabai -m window --grid 1:2:1:0:1:1
  # float < h      : yabai -m window --grid 1:2:0:0:1:1
  # float < return : yabai -m window --grid 6:6:1:1:4:4

  # # Prefix the above with shift modifier to resize a bit smaller: top-third,
  # # bottom-third, left-third, right-third, and smaller center.
  # float < shift - k      : yabai -m window --grid 3:1:0:0:1:1
  # float < shift - j      : yabai -m window --grid 3:1:0:2:1:1
  # float < shift - l      : yabai -m window --grid 1:3:2:0:1:1
  # float < shift - h      : yabai -m window --grid 1:3:0:0:1:1
  # float < shift - return : yabai -m window --grid 4:4:1:1:2:2

  # # Prefix with cmd to resize even smaller and place in corners or center.
  # float < cmd - k      : yabai -m window --grid 5:5:4:4:1:1
  # float < cmd - j      : yabai -m window --grid 5:5:0:4:1:1
  # float < cmd - l      : yabai -m window --grid 5:5:4:0:1:1
  # float < cmd - h      : yabai -m window --grid 5:5:0:0:1:1
  # float < cmd - return : yabai -m window --grid 6:6:2:2:2:2
